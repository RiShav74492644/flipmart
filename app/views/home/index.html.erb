<%= render 'home/head' %>

<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li
      data-target="#carouselExampleIndicators"
      data-slide-to="0"
      class="active"
    ></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="/assets/ci1.jpg" alt="First slide" />
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/assets/ci2.jpg" alt="Second slide" />
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/assets/ci3.jpg" alt="Third slide" />
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/assets/ci4.jpg" alt="Third slide" />
    </div>
  </div>
  <a
    class="carousel-control-prev"
    href="#carouselExampleIndicators"
    role="button"
    data-slide="prev"
  >
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a
    class="carousel-control-next"
    href="#carouselExampleIndicators"
    role="button"
    data-slide="next"
  >
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="row parent-bg m-2">
  <div class="col-md-10 col-sm-8">
    <div class="row">
      <div class="col-md-10 p-2">
        <ch>Deal of the day</ch>
      </div>
      <div class="col-md-2 p-2">

      <%= link_to(raw("<button class='btn btn-primary btn-sm'>View All</button>"),cart_products_path ) %>
      </div>
    </div>
    <div class="row child-bg">
      <% @products.each do |product| %>
        <div class="col-md-3 col-sm-5 justify-content-center" style="border: 0.5px solid #ebebeb; padding:10px;">
          <div class="row justify-content-center">
            <%= image_tag product.image.url(:medium), class: "img-fluid" %><br>
          </div>
          <div class="row d-flex justify-content-center mt-2">
            <div class="col-md-12 text-center"><h6> <%= product.name %><h6></div>
            <div class="col-md-12 text-center"><price><%= number_to_indian_currency(product.price, text: 'â‚¹ ')%>/-</price></div>
              <div class="col-md-12 mt-2">  
                <%= link_to(raw("View Details <i class='fa fa-info-circle' aria-hidden='true'></i>"),cart_product_path(product), class:"btn btn-primary btn-sm btn-block" ) %>
              </div>            
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-2 col-sm-4 child-bg p-2">
    <img src="/assets/ad2.jpg" class="d-block w-100" />
    <br>
    <img src="/assets/ad1.jpg" class="d-block w-100" />
  </div>
</div>

<div class="row m-2">
  <div class="col-md-4 col-sm-4">
    <img class="d-block w-100" src="/assets/branding1.jpg" alt="Third slide" />
  </div>
  <div class="col-md-4 col-sm-4">
    <img class="d-block w-100" src="/assets/branding2.jpg" alt="Third slide" />
  </div>
  <div class="col-md-4 col-sm-4">
    <img class="d-block w-100" src="/assets/branding3.jpg" alt="Third slide" />
  </div>
</div>
